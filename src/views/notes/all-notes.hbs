<!--creamos un bucle de hbs con la etiqueta each-->
<!--el archivo notes.controllers.js nos envia el objeto notes que tiene los atributos title,description y _id a los cuales accedermos-->
<div class="row">
    {{#each notes}}
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title d-flex justify-content-between align-items-center">
                        {{title}} <a href="/notes/edit/{{_id}}"><i class="fas fa-edit"></i></a>
                    </h4>
                    <p>
                        {{description}}
                    </p>
                    <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
                        <input type="hidden" name="_method" value="DELETE">
                        <button type="submit" class="btn btn-danger btn-block btn-sm">
                            Delete
                        </button>
                    </form>
                    
                </div>
            </div>
        </div>
    {{/each}}
</div>
